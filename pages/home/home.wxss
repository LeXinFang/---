/* pages/home/home.wxss */
@import "../../common/css/commonCss.wxss";

.swiper-tab{
  position: fixed;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #272727;
  opacity: 0.7;
  top: 5rpx;
}
.swiper-tab-list{  
  font-size: 30rpx;
  display: inline-block;
  color: #ffffff;
  padding: 0 15rpx;
}
.on{ 
  color: #d81e06;
  font-size: 32rpx;
  font-weight: 600;
  opacity: 1;
  box-shadow: 3px 3px 30px 3px rgb(168, 168, 168);
  /* animation: fly 1s ease 1 forwards; */
}

.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}
.swiper-box view{
  text-align: center;
}
@keyframes fly {
  0% {
    transform: translateX(0rpx);
  }

  100% {
    transform: translateX(195rpx);
  }
}
.swiper-container{
  margin-top: 100rpx;
  padding: 10rpx 35rpx;
}
swiper {
  height: 100vh !important;
}