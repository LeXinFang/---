/* pages/recommend/recommend.wxss */

.recommend{
  color: #ffffff;
}
.recom-first{
  width: 100%;
  height: 380rpx;
  margin: 0 auto;
  position: relative;
  /* border-radius: 15rpx; */
}
.recom-first image{
  /* position: absolute; */
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.recom-first .title{
  color: #ffffff;
  padding: 0 10rpx;
  font-size: 26rpx;
  position: absolute;
  height: 60rpx;
  line-height: 60rpx;
  bottom: 1rpx;
  left: 15rpx;
  /* background-color: #eeeeee; */
}
.con-haeder {
  margin-top: 25rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.con-haeder .title{
  font-size: 32rpx;
  font-weight: 800;
}
.details{
  font-weight: 700;
  font-size: 26rpx;
  float: right;
  color: #d81e06;
}
.con-list{
  margin-top: 25rpx;
}
.con-list .con-ul .con-li{
  display: block;
  height: 100rpx;
  margin-bottom: 16rpx;
  /* height: 45rpx;
  line-height: 45rpx; */
}
.con-list .con-ul .con-li .words{
  vertical-align: top;
  display: inline-block;
  margin-left: 25rpx;
}
.con-list .con-ul .con-li .words .title{
  line-height: 50rpx;
  height: 50rpx;
  display: block;
  font-size: 28rpx;
  font-weight: 600;
}
.con-list .con-ul .con-li .words .introduce{
  display: inline-block;
  font-size: 22rpx;
  color: #c6c4c4;
  line-height: 50rpx;
  height: 50rpx;
}
.con-list .con-ul .con-li image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.more text{
  display: block;
  width: 100%;
  text-align: center;
}
.detalisIcon{
  width: 40rpx !important;
  height: 40rpx !important;
  float: right;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.more{
  color: #d81e06;
}
.onlyAndSq{
  display: inline-block;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 16rpx;
  padding: 0 5rpx;
  border-radius: 6rpx;
  vertical-align: center;margin-right: 10rpx;
}
.onlyMe{
  border: 1rpx solid #d81e06;
  color: #d81e06;
}
.sq{
  border: 1rpx solid #62b900;
  color: #62b900;
}